<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
<!-- Proyectos -->
		<record id="itbase_proyectos_form_view" model="ir.ui.view">
			<field name="name">itbase.proyectos.view.form</field>
			<field name="model">itbase.proyectos</field>
			<field name="arch" type="xml">
				<form>
					<header>
						<field name="estado" widget="statusbar" clickable="True"/>
					</header>
					<sheet>
						<div class="oe_title">
							<h2><field name="name" attrs="{'readonly' :[('estado','=', 'cancel')]}" placeholder="Nombre del Proyecto"/></h2>
						</div>
						<group>
							<group>
								<field name="fecha_inicio"/>
								<field name="compania"/>
							</group>
							<group>
								<field name="prioridad"/>
								<field name="fecha_fin"/>
							</group>							
						</group>						
					</sheet>
				</form>
			</field>
		</record>

		<record id="itbase_proyectos_view_tree" model="ir.ui.view">
            <field name="name">itbase.proyectos.tree.view</field>
            <field name="model">itbase.proyectos</field>
            <field name="arch" type="xml">
                <tree string="Proyectos">
                    <field name="name"/>
					<field name="compania"/>
					<field name="fecha_inicio"/>
					<field name="fecha_fin"/>
					<field name="prioridad"/>
					<field name="estado"/>
                </tree>
            </field>
        </record>

		<record id="itbase_proyectos_action" model="ir.actions.act_window">
			<field name="name">Proyectos</field>
			<field name="res_model">itbase.proyectos</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
                <p>
                    No se encontro ningun proyecto.
                </p>
            </field>
        </record>		
<!---Productos -->
        <record id="itbase_productos_form_view" model="ir.ui.view">
			<field name="name">itbase.productos.view.form</field>
			<field name="model">itbase.productos</field>
			<field name="arch" type="xml">
				<form>
					<header>
						<field name="estado" widget="statusbar" clickable="True"/>
					</header>
					<sheet>
						<field name="imagen" widget="image" class="oe_avatar"/>
						<div class="oe_title">
							<h1><field name="name" attrs="{'readonly' :[('estado','=', 'cancel')]}" placeholder="Nombre del Proyecto"/></h1>
						</div>
						<group>
							<group>
								<field name="proyecto"/>
								<field name="compania"/>
								<field name="fecha_inicio"/>
							</group>
							<group>
								<field name="dueno"/>								
								<field name="responsable"/>
								<field name="prioridad"/>
								<field name="fecha_imp"/>
							</group>
							<group>
								<field name="repositorio" widget="url"/>
								<field name="otro" widget="url"/>
							</group>	
						</group>
						<notebook>
							<page string="Uso">
								<field name="uso" widget="html"/>
							</page>
							<page string="Comentarios">
								<field name="comentarios" widget="text"/>
							</page>
							<page string="Tareas">
								<field name="tareas_ids">
									<tree editable="bottom">
										<field name="name"/>
										<field name="comentarios" widget="text"/>
										<field name="responsable"/>
										<field name="fecha_inicio"/>
										<field name="fecha_final"/>
										<field name="estado"/>
									</tree>
								</field>
							</page>
						</notebook>
					</sheet>
					<div class="oe_chatter">
						<style>
                          .o_chatter_button_new_message {
                              display: none;
                          }
                      	</style>
                      	<field name="message_follower_ids" widget="mail_followers"/>
                      	<field name="message_ids" widget="mail_thread"/>
                    </div>
				</form>
			</field>
		</record>

		<record id="itbase_productos_view_tree" model="ir.ui.view">
            <field name="name">itbase.productos.tree.view</field>
            <field name="model">itbase.productos</field>
            <field name="arch" type="xml">
                <tree string="productos">
                    <field name="name"/>
					<field name="responsable"/>
					<field name="compania"/>
					<field name="prioridad"/>
					<field name="estado"/>
                </tree>
            </field>
        </record>

        <record id="itbase_productos_view_kanban" model="ir.ui.view">
            <field name="name">itbase.productos.kanban.view</field>
            <field name="model">itbase.productos</field>
            <field name="arch" type="xml">
                <kanban class="o_res_partner_kanban">
                    <field name="name"/>
                    <field name="responsable"/>
					<field name="compania"/>
					<field name="prioridad"/>
					<field name="estado"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_image">
                                    <img t-att-src="kanban_image('itbase.productos', 'imagen', record.id.value)"/>
                                </div>
                                <div class="oe_kanban_details">
                                    <strong class="oe_partner_heading">
                                        <field name="name"/>
                                    </strong>
                                    <ul>
                                        <strong><field name="compania"/></strong>
                                    </ul>
                                    <ul>
                                        <field name="responsable"/>
                                    </ul>
                                    <ul>
                                        <field name="estado"/>
                                    </ul>
                                </div>
                            </div>
                        </t>                        
                    </templates>
                </kanban>
            </field>
        </record>

		<record id="itbase_productos_action" model="ir.actions.act_window">
			<field name="name">Productos</field>
			<field name="res_model">itbase.productos</field>
			<field name="view_mode">kanban,tree,form</field>
			<field name="help" type="html">
                <p>
                    No se encontro ningun proyecto.
                </p>
            </field>
        </record>
<!--  TAREAS -->
		<record id="itbase_tareas_action" model="ir.actions.act_window">
			<field name="name">Tareas</field>
			<field name="res_model">itbase.proyectos.tarea</field>
			<field name="view_mode">tree,graph,form</field>
			<field name="help" type="html">
                <p>
                    No se encontro ninguna tarea.
                </p>
            </field>
		</record>

		<record id="itbase_tareas_view_tree" model="ir.ui.view">
            <field name="name">itbase.tareas.tree.view</field>
            <field name="model">itbase.proyectos.tarea</field>
            <field name="arch" type="xml">
                <tree string="productos">
                	<field name="id"/>
                    <field name="name"/>
                    <field name="proyecto_id"/>
					<field name="responsable"/>
					<field name="fecha_inicio"/>
					<field name="fecha_final"/>
					<field name="estado"/>
                </tree>
            </field>
        </record>

        <record id="itbase_tareas_form_view" model="ir.ui.view">
			<field name="name">itbase.tareas.view.form</field>
			<field name="model">itbase.proyectos.tarea</field>
			<field name="arch" type="xml">
				<form>
					<header>
						<button name="asignar" string="Yo lo hago" class="oe_highlight" type="object" icon='fa-thumbs-o-up' attrs="{'invisible': [('asignada', '!=', False)]}"/>
						<field name="estado" widget="statusbar" clickable="True"/>
					</header>
					<sheet>
						<div class="oe_title">
							<h2><field name="name"/></h2>
						</div>
						<group>
							<group>
								<field name="proyecto_id"/>
								<field name="historia_id"/>
								<field name="responsable"/>
								<field name="fecha_inicio"/>
								<field name="fecha_final"/>
							</group>
							<group>
								<field name="fecha_creacion" readonly="1"/>								
								<field name="asignada" readonly="1"/>
								<field name="horas" attrs="{'required': [('asignada', '!=', False)]}"/>
								<field name="soporte_id" readonly="1" attrs="{'invisible': [('soporte_id', '=', False)]}"/>
							</group>							
						</group>
						<group string="Comentarios">
							<p><field name="comentarios" widget="text"/></p>
						</group>
					</sheet>
					<div class="oe_chatter">
						<style>
                          .o_chatter_button_new_message {
                              display: none;
                          }
                      	</style>
                      	<field name="message_follower_ids" widget="mail_followers"/>
                      	<field name="message_ids" widget="mail_thread"/>
                    </div>
				</form>
			</field>
		</record>

		<record id="itbase_tareas_view_graph" model="ir.ui.view">
			<field name="name">itbase.tareas.form.graph</field>
			<field name="model">itbase.proyectos.tarea</field>
			<field name="arch" type="xml">
				<graph stacked="False">
					<field name="responsable" string="Responsable"/>
				</graph>
			</field>
		</record>
<!-- Historias -->
		<record id="itbase_historias_action" model="ir.actions.act_window">
			<field name="name">Historias</field>
			<field name="res_model">itbase.historias</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
                <p>
                    No se encontro ninguna historia.
                </p>
            </field>
		</record>

		<record id="itbase_historias_view_tree" model="ir.ui.view">
            <field name="name">itbase.historias.tree.view</field>
            <field name="model">itbase.historias</field>
            <field name="arch" type="xml">
                <tree string="Historias">
                    <field name="name"/>
                    <field name="asunto"/>
                    <field name="producto_id"/>
					<field name="responsable"/>
					<field name="fecha_inicio"/>
					<field name="fecha_final"/>
					<field name="prioridad"/>
					<field name="estado"/>
                </tree>
            </field>
        </record>

        <record id="itbase_historias_form_view" model="ir.ui.view">
			<field name="name">itbase.historias.view.form</field>
			<field name="model">itbase.historias</field>
			<field name="arch" type="xml">
				<form>
					<header>
						<field name="estado" widget="statusbar" clickable="True"/>
					</header>
					<sheet>
						<div class="oe_title">
							<h2><field name="name" readonly="1"/></h2>
						</div>
						<group>
							<group>
								<field name="asunto"/>
								<field name="producto_id"/>
								<field name="reunion_id"/>
								<field name="responsable"/>
							</group>
							<group>								
								<field name="fecha_inicio"/>
								<field name="fecha_final"/>
								<field name="prioridad"/>
							</group>							
						</group>
						<group string="Como">
							<p><field name="como" widget="html"/></p>
						</group>
						<group string="Quiero">
							<p><field name="quiero" widget="html"/></p>
						</group>
						<group string="Para">
							<p><field name="para" widget="html"/></p>
						</group>
						<group string="Término">
							<p><field name="termino" widget="html"/></p>
						</group>
					</sheet>
					<div class="oe_chatter">
						<style>
							.o_chatter_button_new_message {
							display: none;
							}
						</style>
						<field name="message_follower_ids" widget="mail_followers"/>
						<field name="message_ids" widget="mail_thread"/>
					</div>
				</form>
			</field>
		</record>
<!--ERRORES-->
		<record id="itbase_errores_action" model="ir.actions.act_window">
			<field name="name">Bugs</field>
			<field name="res_model">itbase.errores</field>
			<field name="view_mode">tree,form</field>
			<field name="help" type="html">
                <p>
                    No se encontro ninguna historia.
                </p>
            </field>
		</record>

		<record id="itbase_errores_view_tree" model="ir.ui.view">
            <field name="name">itbase.errores.tree.view</field>
            <field name="model">itbase.errores</field>
            <field name="arch" type="xml">
                <tree string="Bugs">
                    <field name="name"/>
                    <field name="asunto"/>
                    <field name="producto_id"/>
                    <field name="tarea_id"/>
					<field name="responsable"/>
					<field name="fecha_inicio"/>
					<field name="fecha_final"/>
					<field name="estado"/>
                </tree>
            </field>
        </record>

        <record id="itbase_errores_form_view" model="ir.ui.view">
			<field name="name">itbase.errores.view.form</field>
			<field name="model">itbase.errores</field>
			<field name="arch" type="xml">
				<form>
					<header>
						<field name="estado" widget="statusbar" clickable="True"/>
					</header>
					<sheet>
						<div class="oe_title">
							<h2><field name="name" readonly="1"/></h2>
						</div>
						<group>
							<group>
								<field name="asunto"/>
								<field name="producto_id" readonly="1"/>
								<field name="tarea_id"/>
								<field name="responsable"/>
							</group>
							<group>								
								<field name="fecha_inicio"/>
								<field name="fecha_final"/>
							</group>							
						</group>
						<group string="Descripcion">
							<p><field name="descripcion" widget="html"/></p>
						</group>
					</sheet>
					<div class="oe_chatter">
						<style>
							.o_chatter_button_new_message {
							display: none;
							}
						</style>
						<field name="message_follower_ids" widget="mail_followers"/>
						<field name="message_ids" widget="mail_thread"/>
					</div>
				</form>
			</field>
		</record>
	</data>
</odoo>
