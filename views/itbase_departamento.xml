<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id= "itbase_departamento_view_form" model="ir.ui.view">
			<field name="name">itbase.departamento.form.view</field>
			<field name="model">itbase.departamento</field>
			<field name="arch" type="xml">
				<form>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="estado_activo" type="object" class="oe_stat_button" icon="fa-archive">
                                <field name="activo" widget="boolean_button" options='{"terminology": "active"}'/>
                            </button>
                            <button name="act_mantenimientos" type="object" class="oe_stat_button" icon="fa-cogs">
                                <div class="o_form_field o_stat_info">
                                    <span class="o_stat_value"><field name="mantenimientos_count"/></span>
                                    <span class="o_stat_text"> Mantenimientos</span>
                                </div>
                            </button>
                            <button name="act_soportes" type="object" class="oe_stat_button" icon="fa-ticket">
                                <div class="o_form_field o_stat_info">
                                    <span class="o_stat_value"><field name="soportes_count"/></span>
                                    <span class="o_stat_text"> Soportes</span>
                                </div>
                            </button>
                            <button name="act_productos" type="object" class="oe_stat_button" icon="fa-lightbulb-o">
                                <div class="o_form_field o_stat_info">
                                    <span class="o_stat_value"><field name="productos_count"/></span>
                                    <span class="o_stat_text"> Productos</span>
                                </div>
                            </button>
                            <button name="act_tareas" type="object" class="oe_stat_button" icon="fa-list-alt">
                                <div class="o_form_field o_stat_info">
                                    <span class="o_stat_value"><field name="tareas_count"/> Tareas</span>
                                    <span class="o_stat_text"><field name="bugs_count"/> Bugs</span>
                                </div>
                            </button>
                            <button name="act_servidores" type="object" class="oe_stat_button" icon="fa-server">
                                <div class="o_form_field o_stat_info">
                                    <span class="o_stat_value"><field name="servidores_count"/></span>
                                    <span class="o_stat_text"> Servidores</span>
                                </div>
                            </button>
                            <button name="act_historias" type="object" class="oe_stat_button" icon="fa-comments-o">
                                <div class="o_form_field o_stat_info">
                                    <span class="o_stat_value"><field name="historias_count"/></span>
                                    <span class="o_stat_text"> Historias</span>
                                </div>
                            </button>
                        </div>
                        <field name="imagen" widget="image" class="oe_avatar"/>
                        <div class="oe_title">
                            <div>
                                <h3><field name="name"/></h3>
                            </div>
                            <div>
                                <label for="puesto"/>
                                <field name="puesto"/>
                            </div>
                            <div>
                                <label for="correo"/>
                                <field name="correo" widget="email" required="True"/>
                            </div>
                            <div>
                                <label for="telefono"/>
                                <field name="telefono" widget="phone"/>
                            </div>
                            <div>
                                <label for="id_telegram"/>
                                <field name="id_telegram"/>
                            </div>
                        </div>
                        <group>
                            <field name="notificaciones" widget="many2many_checkboxes" options="{'no_create_edit':'1'}"/>
                        </group>
                    </sheet>
                </form>
			</field>
		</record>

		<record id="itbase_departamento_view_kanban" model="ir.ui.view">
			<field name="name">itbase.departamento.form.view</field>
			<field name="model">itbase.departamento</field>
			<field name="arch" type="xml">
				<kanban class="o_res_partner_kanban">
                    <field name="name"/>
                    <field name="puesto"/>
                    <field name="activo"/>
                    <templates>
                    	<t t-name="kanban-box"> 
                            <div class="oe_kanban_global_click">
                                <div class="oe_kanban_bottom_right">
                                    <span class="float-right text-right">
                                        <p class="text-success" attrs="{'invisible': [('activo','=', False)]}">Activo</p>
                                        <p class="text-danger" attrs="{'invisible': [('activo','=', True)]}">Inactivo</p>
                                    </span>
                                </div>
                                <div class="o_kanban_image">
                                	<img t-att-src="kanban_image('itbase.departamento', 'imagen', record.id.raw_value)"/>
                                </div>                                
                                <div class="oe_kanban_details">
                                    <strong class="oe_partner_heading">
                                        <field name="name"/>
                                    </strong>
                                    <ul>
                                        <strong><field name="puesto"/></strong>
                                    </ul>
                                    <ul>
                                        <field name="correo"/>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="itbase_departamento_view_tree" model="ir.ui.view">
            <field name="name">itbase.departamento.tree.view</field>
            <field name="model">itbase.departamento</field>
            <field name="arch" type="xml">
                <tree string="Departamento de IT">
                    <field name="name"/>
                    <field name="puesto"/>
                    <field name="correo"/>
                </tree>
            </field>
        </record>

        <record id="itbase_departamento_view_filter" model="ir.ui.view">
            <field name="name">itbase.departamento.filter</field>
            <field name="model">itbase.departamento</field>
            <field name="arch" type="xml">
                <search string="Departamento">
                    <field name="name"/>
                    <separator/>
                    <filter domain="[('activo', '=', True)]" string="Activos" name="active"/>
                    <filter domain="[('activo', '=', False)]" string="Inactivos" name="inactive"/>
                </search>
            </field>
        </record>

        <record id="itbase_departamento_action" model="ir.actions.act_window">
            <field name="name">Departamento de IT</field>
            <field name="res_model">itbase.departamento</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{"search_default_active":1}</field>
        </record>
	</data>
</odoo>