<?xml version="1.0" encoding="utf-8"?>
<odoo>
<!-- Sistemas Operativos -->
	<data noupdate="1">
		<record id="itbase_so_windows" model="itbase.so">
			<field name="name">Windows</field>
		</record>
		<record id="itbase_so_linux" model="itbase.so">
			<field name="name">Linux</field>
		</record>
		<record id="itbase_so_macos" model="itbase.so">
			<field name="name">Mac OS</field>
		</record>
	</data>
<!-- Marcas -->
	<data noupdate="1">
		<record id="itbase_marca_lenovo" model="itbase.marca">
			<field name="name">Lenovo</field>
		</record>
		<record id="itbase_marca_hp" model="itbase.marca">
			<field name="name">HP</field>
		</record>
		<record id="itbase_marca_dell" model="itbase.marca">
			<field name="name">Dell</field>
		</record>			
	</data>
<!-- Tipo de Servidores -->
	<data noupdate="1">
		<record id="itbase_servidor_local" model="itbase.servidores.tipo">
			<field name="name">Local</field>
		</record>
		<record id="itbase_servidor_vps" model="itbase.servidores.tipo">
			<field name="name">VPS</field>
		</record>
	</data>
<!-- Gestores de Base de Datos -->
	<data noupdate="1">
		<record id="itbase_basedatos_mysql" model="itbase.basedatos.sistema">
			<field name="name">MySQL</field>
		</record>
		<record id="itbase_basedatos_sqlserver" model="itbase.basedatos.sistema">
			<field name="name">SQL Server</field>
		</record>
		<record id="itbase_basedatos_postgresql" model="itbase.basedatos.sistema">
			<field name="name">PostgreSQL</field>
		</record>
	</data>
<!-- Dispositivos Redes -->
	<data noupdate="1">
		<record id="itbase_redes_repetidor" model="itbase.redes.dispositivo">
			<field name="name">Repetidor</field>
		</record>
		<record id="itbase_redes_modem" model="itbase.redes.dispositivo">
			<field name="name">Modem</field>
		</record>
		<record id="itbase_redes_router" model="itbase.redes.dispositivo">
			<field name="name">Router</field>
		</record>
		<record id="itbase_redes_conmutador" model="itbase.redes.dispositivo">
			<field name="name">Conmutador</field>
		</record>
	</data>
<!-- Secuencias -->
	<!-- Mantenimientos -->
	<data noupdate="1">
		<record id="seq_itbase_mantenimiento" model="ir.sequence">
			<field name="name">itbase_mantenimiento_sequence</field>
			<field name="code">itbase.mantenimiento</field>
			<field name="prefix">MANT</field>
			<field name="padding">4</field>
			<field name="company_id" eval="False"/>
		</record>
	</data>
	<!--Soporte-->
	<data noupdate="1">
		<record id="seq_itbase_soporte" model="ir.sequence">
			<field name="name">itbase_soporte_sequence</field>
			<field name="code">itbase.soporte</field>
			<field name="prefix">SP</field>
			<field name="padding">4</field>
			<field name="company_id" eval="False"/>
		</record>
	</data>
	<!--Historias-->
	<data noupdate="1">
		<record id="seq_itbase_historias" model="ir.sequence">
			<field name="name">itbase_historias_sequence</field>
			<field name="code">itbase.historias</field>
			<field name="prefix">HIST</field>
			<field name="padding">4</field>
			<field name="company_id" eval="False"/>
		</record>
	</data>
	<!--Errores-->
	<data noupdate="1">
		<record id="seq_itbase_errores" model="ir.sequence">
			<field name="name">itbase_errores_sequence</field>
			<field name="code">itbase.errores</field>
			<field name="prefix">BUG</field>
			<field name="padding">4</field>
			<field name="company_id" eval="False"/>
		</record>
	</data>
<!-- Medios de Notificaciones -->
	<data noupdate="1">
		<record id="itbase_medio_notificacion_correo" model="itbase.notificaciones.medios">
			<field name="nombre">Correo</field>
		</record>
		<record id="itbase_medio_notificacion_telegram" model="itbase.notificaciones.medios">
			<field name="nombre">Telegram</field>
		</record>
		<record id="itbase_medio_notificacion_odoo" model="itbase.notificaciones.medios">
			<field name="nombre">Odoo</field>
		</record>			
	</data>
<!-- Configuracion -->
	<data noupdate="1">
		<record id="itbase_configuracion" model="itbase.config.settings">
		</record>
	</data>
<!-- Cron Jobs -->
	<record id="itbase_cronjob_recordatorios" forcecreate="True" model="ir.cron">
		<field name="name">ItBase Recordatorios</field>
		<field eval="True" name="active"/>
		<field name="user_id" ref="base.user_root"/>
		<field name="interval_number">1</field>
		<field name="interval_type">minutes</field>
		<field name="numbercall">-1</field>
		<field name="model" eval="'itbase.recordatorios'"/>
		<field name="function" eval="'notificar_recordatorio'"/>
	</record>
</odoo>